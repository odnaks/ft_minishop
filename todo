❌DATA
{
    user
    {
        login   VARCHAR(30)
        pass    VARCHAR(MNOGO)
    }
    category
    {
        name    VARCHAR(30)
    }
    items
    {
        name    VARCHAR(30)
        $       INT
    }
    cat-items
    {
        cat     PRIMARY KEY(category)
        item    PRIMARY KEY(item)
    }
    basket
    {
        login   PRIMARY KEY(user),
        item    PRIMARY KEY(item),
        count   INT
        order   BOOL
    }
    //orders ? (same basket)

CREATE TABLE IF NOT EXISTS `ft_minishop`.`Avatar` (
  `IdAvatar` INT(11) NOT NULL AUTO_INCREMENT,
  `Name` VARCHAR(45) NULL DEFAULT NULL,
  `Link` VARCHAR(200) NULL DEFAULT NULL,
  PRIMARY KEY (`IdAvatar`));



CREATE TABLE IF NOT EXISTS `ft_minishop`.`User` (
  `IdUser` INT(11) NOT NULL,
  `Login` VARCHAR(45) NOT NULL,
  `Password` VARCHAR(60) NOT NULL,
  `AvatarId` INT(11) NULL DEFAULT NULL,
  PRIMARY KEY (`IdUser`),
  INDEX `AvatarFk_idx` (`AvatarId` ASC) VISIBLE,
  CONSTRAINT `AvatarFk`
    FOREIGN KEY (`AvatarId`)
    REFERENCES `ft_minishop`.`avatar` (`IdAvatar`));



CREATE TABLE IF NOT EXISTS `ft_minishop`.`Category` (
  `IdCat` INT(11) NOT NULL AUTO_INCREMENT,
  `Name` VARCHAR(45) NOT NULL,
  `Desc` VARCHAR(200) NULL DEFAULT NULL,
  PRIMARY KEY (`IdCat`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8mb4
CREATE TABLE IF NOT EXISTS `ft_minishop`.`Item` (
  `IdItem` INT(11) NOT NULL AUTO_INCREMENT,
  `Name` VARCHAR(45) NOT NULL,
  `Price` INT(11) NOT NULL,
  PRIMARY KEY (`IdDItem`));

CREATE TABLE IF NOT EXISTS `ft_minishop`.`CatItem` (
  `ItemId` INT(11) NOT NULL,
  `CatId` INT(11) NOT NULL,
  INDEX `CatFk_idx` (`CatId` ASC) VISIBLE,
  INDEX `ItemFk_idx` (`ItemId` ASC) VISIBLE,
  CONSTRAINT `CatFk`
    FOREIGN KEY (`CatId`)
    REFERENCES `ft_minishop`.`category` (`IdCat`),
  CONSTRAINT `ItemFk`
    FOREIGN KEY (`ItemId`)
    REFERENCES `ft_minishop`.`item` (`IdItem`));


CREATE TABLE IF NOT EXISTS `ft_minishop`.`BaketItem` (
  `Id` INT(11) NOT NULL AUTO_INCREMENT,
  `UserId` INT(11) NOT NULL,
  `ItemId` INT(11) NOT NULL,
  `Buy` TINYINT(4) NOT NULL DEFAULT '0',
  PRIMARY KEY (`Id`),
  INDEX `UserFK_idx` (`UserId` ASC) VISIBLE,
  INDEX `ItemFk_idx` (`ItemId` ASC) VISIBLE,
  CONSTRAINT `BasketItemFk`
    FOREIGN KEY (`ItemId`)
    REFERENCES `ft_minishop`.`item` (`IdItem`),
  CONSTRAINT `BasketUserFk`
    FOREIGN KEY (`UserId`)
    REFERENCES `ft_minishop`.`user` (`IdUser`));
